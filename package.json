{
  "name": "code-builder",
  "displayName": "Code Builder",
  "description": "Build Standalone Code Files Easily",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:code-builder.helloWorld",
    "onCommand:code-builder.build"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-builder.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "code-builder.build",
        "title": "Build File"
      }
    ],
    "configuration":{
      "type": "object",
      "title": "Run Code configuration",
      "properties": {
        "code-builder.executorMap": {
          "type":"object",
		  "default":{
			"java":"cd $dir && javac $fileName && java $fileNameWithoutExt",
			"python":"cd $dir && python $fileName"
		  },
		  "description":"Executor Map which includes the Build commands for Languages",
		  "scope":"resource"
        },
		"code-builder.classPath":{
			"type":"string",
			"default":".",
			"description": "ClassPath for Java Files",
			"scope": "resource"
		}
      }
    }
  },
  
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.20.12",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  }
}
